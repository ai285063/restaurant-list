{{!-- search bar --}}
<div class="container mt-5">
  <div class="row" id="search-bar">
    <div class="col-4 mx-5">
      <form action="/search">
        <div class="input-group mb-3">
          <input type="text" name="keyword" class="form-control" value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-outline-secondary" type="submit" id="search-button">Search</button>
          </div>
        </div>
      </form>
    </div>
  </div>

  <div class="row mx-5" id="data-panel">
    {{#each restaurants}}
    <div class="col-sm-4">
      <div class="card mb-2">
        <img class="card-img-top" src="{{this.image}}" alt="Card image cap">
        <div class="card-body">
          <h6 class="card-title">{{this.name}}</h6>
          <p>Rating: {{this.rating}}</p>
        </div>
        <div class="card-body d-flex justify-content-end">
          <a href="/restaurants/{{this._id}}/edit" class="align-self-center mx-2">Edit</a>
          <a href="/restaurants/{{this._id}}" class="align-self-center mx-2">Detail</a>
          <form action="./restaurants/{{ this._id }}/delete" method="POST" style="display: inline;">
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>