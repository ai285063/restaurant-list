    <nav class="navbar navbar-light" style="background-color: #e3f2fd;">
      <div class="container">
        <a class="navbar-brand" href="/">
          {{#if isAuthenticated}}{{ user.name}}'s {{/if}}
          Restaurant List
        </a>
        {{#if isAuthenticated}}
        <a href="/users/logout" class="btn btn-outline-dark">Logout</a>
