<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">修改餐廳</h1>
      <form action="/restaurants/{{restaurant._id}}/edit" method="POST">
        <div class="form-group">
          <label for="name">餐廳名稱</label>
          <input type="text" id="name" name="name" class="form-control" value="{{restaurant.name}}" required>
        </div>
        <div class="form-group">
          <label for="name_en">餐廳英文名稱</label>
          <input type="text" id="name_en" name="name_en" class="form-control" value="{{restaurant.name_en}}">
        </div>
        <div class="form-group">
          <label for="category">餐廳種類</label>
          <input type="text" id="category" name="category" class="form-control" value="{{restaurant.category}}"
            required>
        </div>
        <div class="form-group">
          <label for="image">餐廳圖片連結</label>
          <input type="text" id="image" name="image" class="form-control" value="{{restaurant.image}}" required>
        </div>
        <div class="form-group">
          <label for="location">餐廳地址</label>
          <input type="text" id="location" name="location" class="form-control" value="{{restaurant.location}}"
            required>
        </div>
        <div class="form-group">
          <label for="phone">餐廳電話</label>
          <input type="text" id="phone" name="phone" class="form-control" value="{{restaurant.phone}}" required>
        </div>
        <div class="form-group">
          <label for="google_map">餐廳 Google Map 位址</label>
          <input type="text" id="google_map" name="google_map" class="form-control" value="{{restaurant.google_map}}"
            required>
        </div>
        <div class="form-group">
          <label for="rating">餐廳評價</label>
          <input type="number" id="rating" name="rating" min="0" max="5" step="0.1" class="form-control"
            value="{{restaurant.rating}}" required>
        </div>
        <div class="form-group">
          <label for="description">餐廳簡介</label>
          <input type="text" id="description" name="description" class="form-control"
            value="{{restaurant.description}}">
        </div>
        <button class="btn btn-success mt-2" type="submit">儲存修改</button>
      </form>
    </div>
  </div>
</div>